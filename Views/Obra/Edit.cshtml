@model ActivityManagement.Models.Obra

@{
    ViewData["Title"] = "Edit";
}
</nav>
<div class="content">
    <div class="container-fluid p-0">
        <h1 onclick="testando()">Atualizar</h1>

        <h4>Obra</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-3">
                    <label class="control-label">Inicio do projeto</label>
                    <input type="date" asp-for="Inicio" class="form-control" disabled />
                    <span asp-validation-for="Inicio" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label class="control-label">Previsão</label>
                    <input type="date" asp-for="Previsao" class="form-control" disabled />
                    <span asp-validation-for="Previsao" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label class="control-label">Fim do projeto</label>
                    <input type="date" asp-for="Termino" class="form-control" />
                    <span asp-validation-for="Termino" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label class="control-label">Identificação do projeto</label>
                    <input asp-for="IdentificacaoDoProjeto" class="form-control" disabled />
                    <span asp-validation-for="IdentificacaoDoProjeto" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label class="control-label">Chefe de Obra</label>
                    <input asp-for="ChefeDaObra" class="form-control" />
                    <span asp-validation-for="ChefeDaObra" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label class="control-label">Status</label>
                    <select class="form-select mb-3" asp-for="Status">
                        <option selected>Selecione</option>
                        <option value="1">Em andamento</option>
                        <option value="2">Finalizado</option>
                        <option value="3">Cancelado</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label asp-for="UF" class="control-label"></label>
                    <input asp-for="UF" class="form-control" />
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label asp-for="Municipio" class="control-label"></label>
                    <input asp-for="Municipio" class="form-control" />
                    <span asp-validation-for="Municipio" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label asp-for="Progresso" for="customRange3" class="form-label">Progresso</label>
                    <div class="rangeInput">
                        <input asp-for="Progresso" type="range" class="form-range" min="0" max="100" step="1" id="rangeProgresso" oninput="display.value=value" onchange="display.value=value">
                        <input class="form-control" type="text" id="display" value="0" oninput="rangeProgresso.value=value" onchange="rangeProgresso.value=value">
                    </div>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>
</div>
<script>
    var $range = document.querySelector('customRange3'),
        $value = document.querySelector('rangeValue');

    $range.addEventListener('customRange3', function () {
        $value.textContent = this.value;
    });
</script>