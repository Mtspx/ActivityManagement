@model ActivityManagement.Models.Obra

@{
    ViewData["Title"] = "Novo Projeto";
}
</nav>
<div class="content">
    <div class="container-fluid p-0">
        <h1>Novo Projeto</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-3">
                    <label class="control-label">Inicio do projeto</label>
                    <input asp-for="Inicio" class="form-control" />
                    <span asp-validation-for="Inicio" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label class="control-label">Previsão</label>
                    <input asp-for="Previsao" class="form-control" />
                    <span asp-validation-for="Previsao" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label class="control-label">Fim do projeto</label>
                    <input asp-for="Termino" class="form-control" />
                    <span asp-validation-for="Termino" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label class="control-label">Responsável Geral</label>
                    <input asp-for="ResponsavelGeral" class="form-control" />
                    <span asp-validation-for="ResponsavelGeral" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label class="control-label">Chefe de Obra</label>
                    <input asp-for="ChefeDaObra" class="form-control" />
                    <span asp-validation-for="ChefeDaObra" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label class="control-label">Status</label>
                    <select class="form-select mb-3" asp-for="Status">
                        <option selected>Selecione</option>
                        <option value="Em andamento">Em andamento</option>
                        <option value="Finalizado">Finalizado</option>
                        <option value="Cancelado">Cancelado</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label asp-for="UF" class="control-label"></label>
                    <input asp-for="UF" class="form-control" />
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>
                <div class="form-group col-3 mt-2">
                    <label asp-for="Municipio" class="control-label"></label>
                    <input asp-for="Municipio" class="form-control" />
                    <span asp-validation-for="Municipio" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    <a asp-action="Index"><button class="btn btn-secondary">Voltar</button></a>
                </div>
        </form>
    </div>
</div>
</div>
</div>
</div>
