@{
    ViewData["Title"] = "Projetos";
}
</nav>
<div class="content">
    <div class="container-fluid p-0">
        <div class="headerProjects" style="margin-bottom: 20px;">
            <h1 class="h3 mb-3"><strong>Projetos</strong></h1>
            <a asp-action="Create"><button class="btn btn-primary btn-lg"><i class="bi bi-plus-lg"></i> Novo

                    projeto</button></a>
        </div>
        @{var oPainelProjetos = ViewBag.oPainelProjetos;}
        <div class="row">
            @foreach(var item in oPainelProjetos){
                        <div class="col-xl-6 col-xxl-7">
    <div class="card flex-fill w-100">
        <div class="card-header">
            <h5 class="card-title mb-0"> @item.IdentificacaoDoProjeto | @item.Localidade </h5>
        </div>
            <div class="card-body py-3">
                <div class="cardProjeto">
                    <div class="informacoes">
                        <div>
                            <b>Responsavel: </b> @item.Responsavel
                        </div>
                        <div class="mt-2">
                            <b>Status: </b> @item.Status
                        </div>
                        <div class="mt-2">
                            <b>Data de inicio: </b> @item.DataInicio
                        </div>
                        <div class="mt-2">
                            <b>Previsão: </b> @item.Previsao
                        </div>
                        <div class="mt-2">
                            <b>Data de término: </b> @item.DataFim
                        </div>
                        <div class="mt-2">
                            <b>Progresso: </b> @item.Progresso
                            <div class="progress" role="progressbar" aria-label="Basic example" aria-valuemin="0"
                                aria-valuemax="100">
                                <div class="progress-bar" style="width: @item.Progresso; background-color: @item.CorProgresso;"></div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a><button class="btn btn-success">Detalhes</button></a>
                        <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-primary">Atualizar</button></a>
                    </div>
                </div>
            </div>
            </div>
        </div>
        }
    </div>
</div>
<style>
    .cardProjeto {
        min-height: 230px;
        max-height: 230px;
    }
</style>